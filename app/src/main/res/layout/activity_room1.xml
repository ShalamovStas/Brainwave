<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_favorite_or_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_empty" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation_bottom">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_field_for_learning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="27sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_btn_previous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/layout_tap_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation_choose_word_for_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/btn_word_vocabulary_builder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_add_word"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_clean_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/myColorIndigo400">
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_delete_ru"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_correct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_pen"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_paste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/myColorIndigo400">
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_add_ru"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_go_to_translator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_translate"/>
        </LinearLayout>





    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation_choose_word_for_vocabulary"
        android:background="@color/myColorIndigo200"
        app:itemIconTint="@color/myColor1"
        app:itemTextColor="@color/myColor1"
        app:menu="@menu/bottom_navigation_items">

    </android.support.design.widget.BottomNavigationView>










