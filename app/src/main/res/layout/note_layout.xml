<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/scroll_top_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/myColorGrey100"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView

                    android:layout_width="@dimen/size_label_in_nav_panel"
                    android:layout_height="@dimen/size_label_in_nav_panel"
                    android:layout_marginStart="@dimen/layout_margin_navigation_panel"
                    android:layout_marginEnd="@dimen/layout_margin_navigation_panel"
                    android:background="@drawable/ic_favorite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView

                    android:layout_width="@dimen/size_label_in_nav_panel"
                    android:layout_height="@dimen/size_label_in_nav_panel"
                    android:layout_marginStart="@dimen/layout_margin_navigation_panel"
                    android:layout_marginEnd="@dimen/layout_margin_navigation_panel"
                    android:background="@drawable/ic_all_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/myColorGrey500">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView

                    android:layout_width="@dimen/size_label_in_nav_panel"
                    android:layout_height="@dimen/size_label_in_nav_panel"
                    android:layout_marginStart="@dimen/layout_margin_navigation_panel"
                    android:layout_marginEnd="@dimen/layout_margin_navigation_panel"
                    android:background="@drawable/ic_settings_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/myColorGrey500">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_translator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView

                    android:layout_width="@dimen/size_label_in_nav_panel"
                    android:layout_height="@dimen/size_label_in_nav_panel"
                    android:layout_marginStart="@dimen/layout_margin_navigation_panel"
                    android:layout_marginEnd="@dimen/layout_margin_navigation_panel"
                    android:background="@drawable/ic_translator" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_open_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView

                    android:layout_width="@dimen/size_label_in_nav_panel"
                    android:layout_height="@dimen/size_label_in_nav_panel"
                    android:layout_marginStart="@dimen/layout_margin_navigation_panel"
                    android:layout_marginEnd="@dimen/layout_margin_navigation_panel"
                    android:background="@drawable/ic_layout24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/myColorGrey500">

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom_navigation"
        android:layout_below="@+id/scroll_top_navigation"
        android:orientation="vertical"
        android:background="@color/myColorGrey300">

        <LinearLayout
            android:id="@+id/note_layout_for_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/myColorGrey100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_favorite_text_bottom_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/myColorIndigo300"
                android:text="favorite"
                android:textColor="@color/myColorGrey100" />

            <Button
                android:id="@+id/btn_all_text_bottom_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/myColorIndigo400"
                android:text="All sentences"
                android:textColor="@color/myColorGrey100" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>