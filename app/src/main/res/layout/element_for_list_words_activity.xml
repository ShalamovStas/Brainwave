<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/buttonPieceOfSentence_list_word_activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    >

                        <TextView
                            android:id="@+id/text_piece_of_sentence_list_word_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Textrghh"
                            android:textSize="22sp"
                            />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:id="@+id/btn_learn_not_learn">

                        <ImageView
                            android:id="@+id/image_learn_not_learn_list_word_activity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_play_color"/>
                </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:background="@color/myColorGrey300">

        </LinearLayout>



</LinearLayout>